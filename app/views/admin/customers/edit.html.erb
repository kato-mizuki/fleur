<div class="container">
  <div class="row">
    <span class="p-2 mb-1 bg-secondary">
      <%= @customers.last_name %>
      <%= @customers.first_name %>さんの会員情報編集
    </span>
  </div>
</div>
</br>
<div class="container">
  <div class="row">
    <table class="table table-borderless col-md-8">
      <thead></thead>
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customers.id %></td>
        </tr>
        <%= form_with model: @customers, url: admin_customer_path do |f| %>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :customer_status, "true" %>
            <%= f.label :customer_status,"有効" %>
            <%= f.radio_button :customer_status, "false" %>
            <%= f.label :customer_status,"退会" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
