<div class="container">
  <h2>Sign up</h2>

  <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
              Name(姓)
              <%= f.text_field :last_name %>
              (名)
              <%= f.text_field :first_name %>
            </div>

            <div class="field">
              Mail
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              Postal_code(ハイフンなし)
              <%= f.number_field :postal_code %>
            </div>

            <div class="field">
              Address
              <%= f.text_field :address %>
            </div>

            <div class="field">
              Telephone_number
              <%= f.number_field :telephone_number %>
            </div>

            <div class="field">
              Password(6文字以上)
              <% if @minimum_password_length %>

              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              Password(確認用)
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-success" do %>
              <% end %>
            </div>
          <% end %>
        </div></br>
      </div>
        <div class="offset-1">
          <%= link_to "Log in", new_customer_session_path %>
        </div>

</div>
