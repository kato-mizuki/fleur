<!DOCTYPE html>
<html>
  <head>
    <title>Fleur</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <script src="https://kit.fontawesome.com/31634c652a.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-dark">
     <header class="shadow-sm opacity-50 fixed-top">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <p class="fs-1 fw-bold">
            <%= link_to "Fleur・Du・Bonheur", public_root_path, class: 'btn nav-link text-info pull-left'  %>
          </p>

          <a class="navbar-brand"></a>
          <ul class="navbar-nav">
              <% if customer_signed_in?%>
              <li class="nav-item p-3">
                <p class="text-center">
                  </br><%= link_to "About", public_about_path, class: "btn nav-link text-info text-center" %>
                </p>

              </li>
              <li class="nav-item p-3">
                </br><%= link_to "Item", public_items_path, class: "btn nav-link text-info text-center" %>
              </li>
              <li class="nav-item p-3 ml-auto">
                <%= link_to public_customers_information_path, class: "btn nav-link text-info" do %>
                 <i class="fas fa-user"></i>
                <% end %>
              </li>
              <li class="nav-item p-3 ml-auto">
                <%= link_to public_cart_items_path, class: "btn nav-link text-info" do %>
                 <i class="fas fa-shopping-cart"></i>
                <% end %>
              </li>
              <li class="nav-item p-3 ml-auto">
                <%= link_to destroy_customer_session_path, method: :delete, class: "btn nav-link text-info" do %>
                 <i class="fas fa-sign-out-alt"></i>
                <% end %>
              </li></br>

               <% elsif admin_signed_in?%>
              <li class="nav-item p-3">
                </br><%= link_to "Item", admin_items_path, class: "btn nav-link text-info text-center" %>
              </li>
              <li class="nav-item p-3">
                </br><%= link_to "Order history", admin_root_path, class: "btn nav-link text-info text-center" %>
              </li>
              <li class="nav-item p-3 ml-auto">
                <%= link_to admin_customers_path, class: "btn nav-link text-info" do %>
                 <i class="fas fa-user"></i>
                <% end %>
              </li>
              <li class="nav-item p-3 ml-auto">
                <%= link_to destroy_admin_session_path, method: :delete, class: "btn nav-link text-info" do %>
                 <i class="fas fa-sign-out-alt"></i>
                <% end %>
              </li>
              <% else %>
              <li class="nav-item p-3">
                <%= link_to "About", public_about_path, class: "btn btn-outline-secondary nav-link text-info" %>
              </li>
              <li class="nav-item p-3">
                <%= link_to "Item", public_items_path, class: "btn btn-outline-secondary nav-link text-info" %>
              </li>
              <li class="nav-item p-3">
                <%= link_to "Sign up", new_customer_registration_path, class: "btn btn-outline-secondary nav-link text-info" %>
              </li>
              <li class="nav-item p-3">
                <%= link_to new_customer_session_path, class: "btn nav-link text-info" do  %>
                 <i class="fas fa-sign-in-alt"></i>
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="text-light">
      <%= yield %>
    </main>
  </body>
</html>
